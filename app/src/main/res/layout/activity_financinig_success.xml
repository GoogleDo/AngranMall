<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_edit_background_color">


    <com.angran.dushu.angranmall.view.TitleBar.GeneralTitleBar
        android:id="@+id/financing_success_titlebar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"/>
    
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/financing_success"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="21dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您的融资已申请成功"
        android:textSize="20sp"
        android:textColor="@color/title_color"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="正在通知客户，请耐心等待回电"
        android:textSize="13sp"
        android:textColor="@color/login_hint_color"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btn_back_to_main"
        android:layout_width="100dp"
        android:layout_height="34dp"
        android:text="返回首页"
        android:textSize="13sp"
        android:textColor="@color/yellow_text_color"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/tv_yellow_bg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="猜你喜欢"
        android:textSize="15sp"
        android:textColor="@color/title_color"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="15dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="物流服务"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/login_code_text_color"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_wl"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_apply"
            android:text="查看"
            android:textSize="13sp"
            android:textColor="@color/more_text_color"
            />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="供应链服务"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/login_code_text_color"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_gyl"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_apply"
            android:text="查看"
            android:textSize="13sp"
            android:textColor="@color/more_text_color"
            />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="诚信保障"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/login_code_text_color"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_cxbz"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_apply"
            android:text="查看"
            android:textSize="13sp"
            android:textColor="@color/more_text_color"
            />

    </FrameLayout>

</LinearLayout>