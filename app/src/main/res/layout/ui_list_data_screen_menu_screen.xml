<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.angran.dushu.angranmall.product.AllPreductActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="请选择筛选条件"
            android:textColor="@color/more_text_color"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_pack_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:drawableRight="@drawable/up_back_black"
            android:drawablePadding="10dp"
            android:text="收起"
            android:textColor="@color/more_text_color"
            android:textSize="13sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/mine_divier" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="优惠与活动"
        android:textSize="10sp"
        android:textColor="@color/login_hint_color"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <com.angran.dushu.angranmall.view.TagText
            android:id="@+id/tag_tv_mjyh"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:text="满减优惠"
            android:textSize="12sp"
            android:textColor="@color/more_text_color"
            android:gravity="center"
            android:enabled="true"
            android:background="@drawable/selector_tagtext"/>

        <com.angran.dushu.angranmall.view.TagText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:text="预付优惠"
            android:textSize="12sp"
            android:textColor="@color/more_text_color"
            android:gravity="center"
            android:enabled="true"
            android:background="@drawable/selector_tagtext"/>

        <com.angran.dushu.angranmall.view.TagText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:text="领红包"
            android:textSize="12sp"
            android:textColor="@color/more_text_color"
            android:gravity="center"
            android:enabled="true"
            android:background="@drawable/selector_tagtext"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="属性标签"
        android:textSize="10sp"
        android:textColor="@color/login_hint_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <com.angran.dushu.angranmall.view.TagText
            android:id="@+id/tag_tv_zcsh"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:text="支持送货"
            android:textSize="12sp"
            android:textColor="@color/more_text_color"
            android:gravity="center"
            android:enabled="true"
            android:background="@drawable/selector_tagtext"/>

        <com.angran.dushu.angranmall.view.TagText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:text="三方化验"
            android:textSize="12sp"
            android:textColor="@color/more_text_color"
            android:gravity="center"
            android:enabled="true"
            android:background="@drawable/selector_tagtext"/>

        <com.angran.dushu.angranmall.view.TagText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:text="先贷后款"
            android:textSize="12sp"
            android:textColor="@color/more_text_color"
            android:gravity="center"
            android:enabled="true"
            android:background="@drawable/selector_tagtext"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <com.angran.dushu.angranmall.view.TagText
            android:id="@+id/tag_tv_"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:text="现货"
            android:textSize="12sp"
            android:textColor="@color/more_text_color"
            android:gravity="center"
            android:enabled="true"
            android:background="@drawable/selector_tagtext"/>

        <com.angran.dushu.angranmall.view.TagText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:text="黑卡会员"
            android:textSize="12sp"
            android:textColor="@color/more_text_color"
            android:gravity="center"
            android:enabled="true"
            android:background="@drawable/selector_tagtext"/>

        <com.angran.dushu.angranmall.view.TagText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:text="金牌企业"
            android:textSize="12sp"
            android:textColor="@color/more_text_color"
            android:gravity="center"
            android:enabled="true"
            android:background="@drawable/selector_tagtext"/>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="服务"
        android:textSize="10sp"
        android:textColor="@color/login_hint_color"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <com.angran.dushu.angranmall.view.TagText
            android:id="@+id/tag_tv_dbjy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:text="担保交易"
            android:textSize="12sp"
            android:textColor="@color/more_text_color"
            android:gravity="center"
            android:enabled="true"
            android:background="@drawable/selector_tagtext"/>

        <com.angran.dushu.angranmall.view.TagText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:text="盎然金融"
            android:textSize="12sp"
            android:textColor="@color/more_text_color"
            android:gravity="center"
            android:enabled="true"
            android:background="@drawable/selector_tagtext"/>

        <com.angran.dushu.angranmall.view.TagText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:text="货达配送"
            android:textSize="12sp"
            android:textColor="@color/more_text_color"
            android:gravity="center"
            android:enabled="true"
            android:background="@drawable/selector_tagtext"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <com.angran.dushu.angranmall.view.TagText
            android:id="@+id/tag_tv_cxbx"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:text="诚信保险"
            android:textSize="12sp"
            android:textColor="@color/more_text_color"
            android:gravity="center"
            android:enabled="true"
            android:background="@drawable/selector_tagtext"/>

        <com.angran.dushu.angranmall.view.TagText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:text="QLT质量链"
            android:textSize="12sp"
            android:textColor="@color/more_text_color"
            android:gravity="center"
            android:enabled="true"
            android:background="@drawable/selector_tagtext"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_is_sure_ap"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/yellow_text_color"
        android:layout_marginTop="20dp"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"/>



</LinearLayout>
