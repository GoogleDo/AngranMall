<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_edit_background_color">

    <com.angran.dushu.angranmall.view.TitleBar.GeneralTitleBar
        android:id="@+id/goods_titlebar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">


        <ImageView
            android:id="@+id/iv_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/camera"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上传图片/视频的货品排名更靠前"
            android:textColor="@color/more_text_color"
            android:textSize="12sp"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图片 + 视频不得超过9张，其中图片至少1张"
            android:textColor="@color/login_hint_color"
            android:textSize="10sp"
            android:layout_gravity="center"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="21dp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/mine_divier" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="31dp"
            android:layout_marginRight="45dp"
            android:gravity="center"
            android:text="商品名称"
            android:textColor="@color/login_code_text_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_choose_goods"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="选择您要卖的商品"
            android:textColor="@color/tab_text_color"
            android:textSize="13sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/mine_divier" />

    <LinearLayout
        android:id="@+id/ly_num"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="31dp"
            android:layout_marginRight="45dp"
            android:gravity="center"
            android:text="指标规格"
            android:textColor="@color/login_code_text_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_choose_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="输入详细指标"
            android:textColor="@color/tab_text_color"
            android:textSize="13sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/mine_divier" />

    <LinearLayout
        android:id="@+id/ly_price"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_marginBottom="7dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="31dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="价格"
            android:textColor="@color/login_code_text_color"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:src="@drawable/right_to" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_marginBottom="7dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="31dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="交货地址"
            android:textColor="@color/login_code_text_color"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:src="@drawable/right_to" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_deal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="31dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="交易细节"
            android:textColor="@color/login_code_text_color"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:src="@drawable/right_to" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/mine_divier" />


    <TextView
        android:id="@+id/tv_discount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="31dp"
        android:text="优惠"
        android:textSize="15sp"
        android:textColor="@color/login_code_text_color"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/mine_divier" />

    <TextView
        android:id="@+id/tv_other"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="31dp"
        android:text="其他"
        android:textSize="15sp"
        android:textColor="@color/login_code_text_color"/>

    <TextView
        android:id="@+id/tv_release_guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:text="不知道怎么发布？点击查看 发布指南>>"/>

    <Button
        android:id="@+id/btn_release"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="确认发布"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/yellow_text_color"/>


</LinearLayout>